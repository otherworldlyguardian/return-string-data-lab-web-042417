<h2>New Product</h2>

<%= form_for @product do |f| %>
  <p><%= f.text_field :name, placeholder: 'Name' %></p>
  <p><%= f.number_field :price, placeholder: 'Price' %></p>
  <p><%= f.text_area :description, placeholder: 'Description...' %></p>
  <p><%= f.number_field :inventory, placeholder: 'Inventory Count' %></p>
  <p><%= f.submit %></p>
<% end %>
